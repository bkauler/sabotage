[mirrors]
http://distro.ibiblio.org/quirky/quirky6/sources/easy/pup-tools-20160523.tar.gz

[vars]
filesize=27968
sha512=ee3c7c2da07f5a296f680f08609bf61f8f26c92cf695b6da255c1c26514b0897a52b7cc9c3606df6978cfed86f12dda8a7f9510cb39386a9d1aa4dcddd917dbe
desc="Core utilities used in Puppy Linux, Quirky Linux and Easy Linux (and derivatives)"
tardir=pup-tools

[deps]
gtk+2
bacon

[build]
cd bacon
./build-pup-tools
cd ..
cd gcc
./build-pup-tools
cd ..
cd diet
#used to use dietlibc, but now building with musl...
gcc printcols.c -o printcols
gcc vercmp.c -o vercmp
gcc truncate.c -o truncate
cd ..

mkdir -p "$R"/opt/pup_event
for AEXE in pup_event_frontend_d pup_event_ipc
do
 install -m755 -s bacon/$AEXE "$R"/opt/pup_event
done

mkdir -p "$R"/opt/simple_network_setup
for AEXE in proxy-setup
do
 install -m755 -s bacon/$AEXE "$R"/opt/simple_network_setup
done

mkdir -p "$R"/opt/petget
for AEXE in debdb2pupdb find_cat
do
 install -m755 -s bacon/$AEXE "$R"/opt/petget
done

dest="$butch_install_dir""$butch_prefix"
mkdir "$dest"/bin
for AEXE in pngoverlay popup welcome1stboot
do
 install -m755 -s bacon/$AEXE "$dest"/bin
done
for AEXE in getcurpos
do
 install -m755 -s gcc/$AEXE "$dest"/bin
done
for AEXE in printcols truncate vercmp
do
 install -m755 -s diet/$AEXE "$dest"/bin
done

